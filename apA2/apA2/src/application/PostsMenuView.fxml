<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefWidth="300" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.PostsMenuController">
    <Label fx:id="menuLabel" text="Choose an Option" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Button onAction="#retrievePostsByLikes" text="Retrieve Posts by N Likes" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Button onAction="#retrievePostById" text="Retrieve Post by ID" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Button onAction="#exportPost" text="Export Post" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button onAction="#removePostById" text="Remove Post by ID" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Button onAction="#backToDashboard" text="Back to Dashboard" GridPane.columnIndex="0" GridPane.rowIndex="5" />
   <Label text="Choose an Option" />
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
